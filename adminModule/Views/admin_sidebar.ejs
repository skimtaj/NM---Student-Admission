<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Nababia Mission</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        :root {
            --admin-primary-color: #2c3e50;
            --admin-secondary-color: #1a2530;
            --admin-accent-color: #3498db;
            --admin-success-color: #2ecc71;
            --admin-danger-color: #e74c3c;
            --admin-sidebar-width: 260px;
            --admin-header-height: 70px;
            --admin-footer-height: 50px;
            --admin-transition: all 0.2s ease;
            --admin-border-radius: 8px;
            --admin-card-shadow: 0 4px 12px rgba(0, 0, 0, 0.06);
            --admin-sidebar-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            --admin-active-glow: rgba(52, 152, 219, 0.2);
        }

        body {
            background-color: #f5f7fb;
            color: #000000;
            overflow-x: hidden;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .admin-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
        }

        .admin-overlay.active {
            display: block;
        }

        .admin-header {
            position: fixed;
            top: 0;
            left: var(--admin-sidebar-width);
            right: 0;
            height: var(--admin-header-height);
            background-color: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 999;
            transition: var(--admin-transition);
        }

        .admin-header-left {
            display: flex;
            align-items: center;
        }

        .admin-toggle-sidebar {
            display: none;
            background: var(--admin-primary-color);
            color: white;
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            margin-right: 12px;
            font-size: 16px;
            transition: var(--admin-transition);
        }

        .admin-toggle-sidebar:hover {
            background: var(--admin-secondary-color);
        }

        .admin-search-box {
            position: relative;
        }

        .admin-search-box input {
            padding: 8px 12px 8px 36px;
            border: 1px solid #e0e0e0;
            border-radius: 18px;
            font-size: 14px;
            width: 220px;
            transition: var(--admin-transition);
        }

        .admin-search-box i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #adb5bd;
            font-size: 14px;
        }

        .admin-header-right {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .admin-user-info {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .admin-user-info img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        .admin-sidebar {
            width: var(--admin-sidebar-width);
            background: #211B34;
            color: white;
            height: 100vh;
            position: fixed;
            transition: var(--admin-transition);
            z-index: 1000;
            box-shadow: var(--admin-sidebar-shadow);
            overflow-y: auto;
            left: 0;
        }

        .admin-sidebar-header {
            padding: 16px 12px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            display: flex;
            align-items: center;
        }

        .admin-sidebar-header h3 {
            font-weight: 600;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            color: white;
        }

        .admin-sidebar-header h3 i {
            margin-right: 10px;
            background: rgba(255, 255, 255, 0.1);
            width: 34px;
            height: 34px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

        .admin-sidebar-menu {
            padding: 6px 0;
        }

        .admin-menu-item {
            padding: 10px 12px;
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: var(--admin-transition);
            margin: 2px 8px;
            border-radius: 6px;
            position: relative;
            overflow: hidden;
            text-decoration: none;
            color: white;
        }

        .admin-menu-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .admin-menu-item:hover::before {
            left: 100%;
        }

        .admin-menu-item:hover {
            background-color: rgba(255, 255, 255, 0.08);
            transform: translateX(3px);
        }

        .admin-menu-item.active {
            background-color: rgba(255, 255, 255, 0.12);
            box-shadow:
                0 0 10px var(--admin-active-glow),
                0 2px 6px rgba(0, 0, 0, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.08);
            position: relative;
            transform: translateX(3px);
            z-index: 1;
        }

        .admin-menu-item.active::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 3px;
            background: linear-gradient(to bottom, var(--admin-accent-color), var(--admin-success-color));
            border-radius: 0 3px 3px 0;
            box-shadow: 0 0 8px var(--admin-accent-color);
        }

        .admin-menu-item.active i {
            color: var(--admin-accent-color);
            text-shadow: 0 0 6px var(--admin-accent-color);
            transform: scale(1.05);
        }

        .admin-menu-item.active span {
            font-weight: 600;
            color: #ffffff;
            text-shadow: 0 0 1px rgba(255, 255, 255, 0.2);
        }

        .admin-menu-item i {
            margin-right: 8px;
            font-size: 15px;
            width: 18px;
            text-align: center;
            transition: var(--admin-transition);
        }

        .admin-menu-item:hover i {
            color: var(--admin-accent-color);
            transform: scale(1.05);
        }

        .admin-menu-item span {
            font-size: 13.5px;
            transition: var(--admin-transition);
        }

        .admin-menu-item:hover span {
            font-weight: 500;
        }

        .admin-submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.6s ease;
            background-color: rgba(0, 0, 0, 0.08);
            border-radius: 6px;
            margin: 0 8px;
        }

        .admin-submenu.open {
            max-height: 300px;
        }

        .admin-submenu-item {
            padding: 8px 12px 8px 38px;
            transition: var(--admin-transition);
            border-radius: 5px;
            margin: 2px;
            font-size: 12.5px;
            position: relative;
            display: block;
            text-decoration: none;
            color: white;
        }

        .admin-submenu-item::before {
            content: '';
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            transition: var(--admin-transition);
        }

        .admin-submenu-item:hover::before {
            background-color: var(--admin-accent-color);
            transform: translateY(-50%) scale(1.3);
        }

        .admin-submenu-item:hover {
            background-color: rgba(255, 255, 255, 0.08);
            padding-left: 42px;
        }

        .admin-submenu-item.active {
            background-color: rgba(255, 255, 255, 0.12);
            font-weight: 500;
            box-shadow:
                0 0 8px rgba(52, 152, 219, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.08);
            position: relative;
        }

        .admin-submenu-item.active::after {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 65%;
            width: 2px;
            background: linear-gradient(to bottom, var(--admin-accent-color), var(--admin-success-color));
            border-radius: 0 2px 2px 0;
            box-shadow: 0 0 6px var(--admin-accent-color);
        }

        .admin-submenu-item.active::before {
            background-color: var(--admin-accent-color);
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 0 4px var(--admin-accent-color);
        }

        .admin-main-content {
            margin-left: var(--admin-sidebar-width);
            padding: 16px;
            padding-top: calc(var(--admin-header-height) + 16px);
            transition: var(--admin-transition);
            min-height: 100vh;
        }

        .admin-dashboard-container {
            display: flex;
        }

        .dashboard-content {
            flex: 1;
            padding: 16px;
        }

        .dashboard-section {
            background: white;
            border-radius: var(--admin-border-radius);
            padding: 20px;
            margin-bottom: 24px;
            box-shadow: var(--admin-card-shadow);
        }

        .dashboard-section h2 {
            margin-bottom: 20px;
            color: var(--admin-primary-color);
            font-weight: 600;
            font-size: 1.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: var(--admin-border-radius);
            padding: 20px;
            box-shadow: var(--admin-card-shadow);
            display: flex;
            align-items: center;
            transition: var(--admin-transition);
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-right: 16px;
        }

        .stat-info {
            flex: 1;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 4px;
            color: var(--admin-primary-color);
        }

        .stat-label {
            color: #6c757d;
            font-size: 14px;
            font-weight: 500;
        }

        .users-icon {
            background: rgba(52, 152, 219, 0.08);
            color: var(--admin-accent-color);
        }

        .revenue-icon {
            background: rgba(46, 204, 113, 0.08);
            color: var(--admin-success-color);
        }

        .orders-icon {
            background: rgba(241, 196, 15, 0.08);
            color: #f1c40f;
        }

        .pending-icon {
            background: rgba(231, 76, 60, 0.08);
            color: var(--admin-danger-color);
        }

        .recent-activity {
            margin-top: 20px;
        }

        .activity-list {
            list-style: none;
        }

        .activity-item {
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-icon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            background: rgba(52, 152, 219, 0.08);
            color: var(--admin-accent-color);
        }

        .activity-details {
            flex: 1;
        }

        .activity-title {
            font-weight: 500;
            margin-bottom: 2px;
        }

        .activity-time {
            color: #6c757d;
            font-size: 12px;
        }

        /* Media Queries */
        @media (max-width: 1200px) {
            .admin-sidebar {
                width: 220px;
            }

            .admin-main-content,
            .admin-header {
                margin-left: 220px;
            }
        }

        @media (max-width: 992px) {
            .admin-sidebar {
                width: 60px;
                overflow: visible;
            }

            .admin-sidebar-header h3 span,
            .admin-menu-item span,
            .admin-submenu {
                display: none;
            }

            .admin-menu-item {
                justify-content: center;
                padding: 10px;
                margin: 2px 6px;
            }

            .admin-menu-item i {
                margin-right: 0;
                font-size: 16px;
            }

            .admin-main-content,
            .admin-header {
                margin-left: 60px;
            }

            .admin-sidebar:hover {
                width: var(--admin-sidebar-width);
            }

            .admin-sidebar:hover .admin-sidebar-header h3 span,
            .admin-sidebar:hover .admin-menu-item span,
            .admin-sidebar:hover .admin-submenu {
                display: block;
            }

            .admin-sidebar:hover .admin-menu-item {
                justify-content: flex-start;
                padding: 10px 12px;
                margin: 2px 8px;
            }

            .admin-sidebar:hover .admin-menu-item i {
                margin-right: 8px;
                font-size: 15px;
            }
        }

        @media (max-width: 768px) {
            .admin-toggle-sidebar {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .admin-sidebar {
                left: -260px;
                width: 260px;
            }

            .admin-main-content,
            .admin-header {
                margin-left: 0;
            }

            .admin-header {
                left: 0;
            }

            .admin-sidebar.open {
                left: 0;
            }

            .admin-sidebar.open .admin-sidebar-header h3 span,
            .admin-sidebar.open .admin-menu-item span,
            .admin-sidebar.open .admin-submenu {
                display: block;
            }

            .admin-sidebar.open .admin-menu-item {
                justify-content: flex-start;
                padding: 10px 12px;
                margin: 2px 8px;
            }

            .admin-sidebar.open .admin-menu-item i {
                margin-right: 8px;
                font-size: 15px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 16px;
            }

            .admin-main-content {
                padding: 12px;
                padding-top: calc(var(--admin-header-height) + 12px);
            }
        }

        @media (max-width: 576px) {
            :root {
                --admin-header-height: 56px;
            }

            .admin-header {
                padding: 0 12px;
            }

            .admin-user-info span {
                display: none;
            }

            .admin-header-right {
                gap: 8px;
            }

            .admin-toggle-sidebar {
                width: 32px;
                height: 32px;
                font-size: 14px;
                margin-right: 8px;
            }

            .admin-user-info img {
                width: 32px;
                height: 32px;
            }

            .admin-search-box input {
                width: 160px;
            }

            .stat-card {
                padding: 16px;
            }

            .stat-icon {
                width: 48px;
                height: 48px;
                font-size: 20px;
                margin-right: 12px;
            }

            .stat-value {
                font-size: 24px;
            }
        }

        @media (max-width: 400px) {
            .admin-search-box input {
                width: 130px;
                padding-left: 32px;
            }
        }

        .admin-menu-item:hover {
            text-decoration: none;
        }

        .admin-submenu-item:hover {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="admin-overlay" id="admin-overlay"></div>

    <div class="admin-header">
        <div class="admin-header-left">
            <button class="admin-toggle-sidebar" onclick="toggleAdminSidebar()">
                <i class="fas fa-bars"></i>
            </button>
            <div class="admin-search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search...">
            </div>
        </div>
        <div class="admin-header-right">
            <div class="admin-user-info">
                <img src="https://img.freepik.com/free-vector/business-user-shield_78370-7029.jpg" alt="User">
                <span>Admin User</span>
            </div>
        </div>
    </div>

    <div class="admin-dashboard-container">
        <div class="admin-sidebar" id="admin-sidebar">
            <div class="admin-sidebar-header">
                <h3><i class="fas fa-chart-pie"></i> <span>Nababia Mission</span></h3>
            </div>
            <div class="admin-sidebar-menu">
                <a href="/nm/admin-dashboard" class="admin-menu-item active">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>




                <div class="admin-menu-item" onclick="toggleAdminSubmenu('registration')">
                    <i class="fas fa-user-plus"></i>
                    <span>Registration - 2026</span>
                    <i class="fas fa-chevron-down" style="margin-left: auto; font-size: 12px;"></i>
                </div>
                <div class="admin-submenu" id="registration-submenu">
                    <a href="/nm/admin-dashboard/admission-list" class="admin-submenu-item">All Registration</a>
                    <a href="#" class="admin-submenu-item">Add New</a>
                </div>

                <a href="#" class="admin-menu-item">
                    <i class="fas fa-flag"></i>
                    <span>Report</span>
                </a>

                <a href="#" class="admin-menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>

                <a href="#" onclick="adminLogout()" class="admin-menu-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>


    </div>

    <script>


        const adminLogout = () => {

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Logout!"
            }).then((result) => {
                if (result.isConfirmed) {

                    window.location.href = '/logout'
                }
            });

        }


        function toggleAdminSubmenu(id) {
            const submenu = document.getElementById(`${id}-submenu`);
            const allSubmenus = document.querySelectorAll('.admin-submenu');

            allSubmenus.forEach(sub => {
                if (sub.id !== `${id}-submenu` && sub.classList.contains('open')) {
                    sub.classList.remove('open');
                }
            });

            if (submenu) {
                submenu.classList.toggle('open');
            }
        }

        function toggleAdminSidebar() {
            const sidebar = document.getElementById('admin-sidebar');
            const overlay = document.getElementById('admin-overlay');

            sidebar.classList.toggle('open');
            overlay.classList.toggle('active');

            if (window.innerWidth < 768) {
                document.body.style.overflow = sidebar.classList.contains('open') ? 'hidden' : '';
            }
        }

        document.getElementById('admin-overlay').addEventListener('click', function () {
            toggleAdminSidebar();
        });

        document.querySelectorAll('.admin-menu-item').forEach(item => {
            item.addEventListener('click', function (e) {
                if (this.querySelector('.fa-chevron-down')) {
                    e.preventDefault();
                    return;
                }

                document.querySelectorAll('.admin-menu-item').forEach(i => {
                    i.classList.remove('active');
                });

                this.classList.add('active');

                if (window.innerWidth < 768) {
                    toggleAdminSidebar();
                }
            });
        });

        document.querySelectorAll('.admin-submenu-item').forEach(item => {
            item.addEventListener('click', function () {
                document.querySelectorAll('.admin-submenu-item').forEach(i => {
                    i.classList.remove('active');
                });

                this.classList.add('active');

                if (window.innerWidth < 768) {
                    toggleAdminSidebar();
                }
            });
        });

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('admin-sidebar');
            const toggleBtn = document.querySelector('.admin-toggle-sidebar');

            if (window.innerWidth < 768 &&
                sidebar.classList.contains('open') &&
                !sidebar.contains(event.target) &&
                (!toggleBtn || !toggleBtn.contains(event.target))) {
                toggleAdminSidebar();
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('admin-sidebar');
            const overlay = document.getElementById('admin-overlay');

            if (window.innerWidth >= 768) {
                sidebar.classList.remove('open');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            const dashboardItem = document.querySelector('.admin-menu-item[href="/mmr-admin"]');
            if (dashboardItem) {
                dashboardItem.classList.add('active');
            }
        });





    </script>
</body>

</html>